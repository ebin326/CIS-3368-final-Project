<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
    <title>Cargo Management</title>
</head>
<body>
    <div class="container my-5">
        <h3>Cargo List</h3>
        <ul>
            <% cargo.forEach(function(item) { %>
                <li>ID: "<%= item.id %>" Weight: "<%= item.weight %>" Type: "<%= item.cargotype %>" Departure: "<%= item.departure %>" Arrival: "<%= item.arrival %>" Ship ID: "<%= item.shipid %>"</li>
            <% }); %>
        </ul>
        <h3 style="text-align: center;">Add New Cargo</h3>
        <form action="/addCargo" method="POST">
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <input
                            type="text"
                            id="addcargotype"
                            name="addcargotype"
                            class="form-control"
                            style="
                                background-image: url('data:image/png;base64,');
                                background-repeat: no-repeat;
                                background-attachment: scroll;
                                background-size: 16px 18px;
                                background-position: 98% 50%;
                            "
                            autocomplete="off"
                        />
                        <label class="form-label" for="addcargotype">Cargo Type</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <input
                            type="number"
                            id="addweight"
                            name="addweight"
                            class="form-control"
                            autocomplete="off"
                            style="
                                background-image: url('data:image/png;base64,');
                                background-repeat: no-repeat;
                                background-attachment: scroll;
                                background-size: 16px 18px;
                                background-position: 98% 50%;
                            "
                        />
                        <label class="form-label" for="addweight">Weight</label>
                    </div>
                </div>
            </div>

            <!-- Departure Date -->
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline mb-4">
                        <input
                            type="text"
                            id="adddeparture"
                            name="adddeparture"
                            class="form-control"
                            autocomplete="off"
                            style="
                                background-image: url('data:image/png;base64,');
                                background-repeat: no-repeat;
                                background-attachment: scroll;
                                background-size: 16px 18px;
                                background-position: 98% 50%;
                            "
                        />
                        <label class="form-label" for="adddeparture">Departure Date</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline mb-4">
                        <input
                            type="text"
                            id="addarrival"
                            name="addarrival"
                            class="form-control"
                            autocomplete="off"
                            style="
                                background-image: url('data:image/png;base64,');
                                background-repeat: no-repeat;
                                background-attachment: scroll;
                                background-size: 16px 18px;
                                background-position: 98% 50%;
                            "
                        />
                        <label class="form-label" for="addarrival">Arrival Date</label>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline mb-4">
                        <textarea
                            id="adddescription"
                            name="adddescription"
                            class="form-control"
                            rows="4"
                            style="
                                background-image: url('data:image/png;base64,');
                                background-repeat: no-repeat;
                                background-attachment: scroll;
                                background-size: 16px 18px;
                                background-position: 98% 50%;
                            "
                        ></textarea>
                        <label class="form-label" for="adddescription">Description</label>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary btn-block">Add Cargo</button>
        </form>
    </div>
</main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
