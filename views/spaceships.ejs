<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spaceship Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <header class="bg-dark text-white text-center p-3">
        <h1>Spaceship Management</h1>
    </header>

    <main class="container my-5">
        <div class="container">
            <h2 style="text-align: center">Manage Spaceships</h2>

            <!-- Update Spaceship Form -->
            <h3 style="text-align: center">Update Existing Spaceship</h3>
            <form action="/updateSpaceship" method="POST">
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input
                                type="number"
                                id="id"
                                name="id"
                                class="form-control"
                                style="
                                    background-image: url('data:image/png;base64,');
                                    background-repeat: no-repeat;
                                    background-attachment: scroll;
                                    background-size: 16px 18px;
                                    background-position: 98% 50%;
                                "
                                autocomplete="off"
                            />
                            <label class="form-label" for="id">Spaceship ID</label>
                            <div class="form-notch">
                                <div class="form-notch-leading"></div>
                                <div class="form-notch-middle"></div>
                                <div class="form-notch-trailing"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input
                                type="number"
                                id="updatemaxweight"
                                name="updatemaxweight"
                                class="form-control"
                                style="
                                    background-image: url('data:image/png;base64,');
                                    background-repeat: no-repeat;
                                    background-attachment: scroll;
                                    background-size: 16px 18px;
                                    background-position: 98% 50%;
                                "
                                autocomplete="off"
                            />
                            <label class="form-label" for="updatemaxweight">Max Weight</label>
                            <div class="form-notch">
                                <div class="form-notch-leading"></div>
                                <div class="form-notch-middle"></div>
                                <div class="form-notch-trailing"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-outline">
                            <input
                                type="number"
                                id="updatecaptainid"
                                name="updatecaptainid"
                                class="form-control"
                                autocomplete="off"
                                style="
                                    background-image: url('data:image/png;base64,');
                                    background-repeat: no-repeat;
                                    background-attachment: scroll;
                                    background-size: 16px 18px;
                                    background-position: 98% 50%;
                                "
                            />
                            <label class="form-label" for="updatecaptainid">Captain ID</label>
                            <div class="form-notch">
                                <div class="form-notch-leading"></div>
                                <div class="form-notch-middle"></div>
                                <div class="form-notch-trailing"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block mb-4">Update Spaceship</button>
            </form>

            <hr class="my-5">

            <!-- Delete Spaceship Form -->
            <h3 style="text-align: center;">Delete Existing Spaceship</h3>
            <form action="/delSpaceship" method="POST">
                <div class="row mb-4">
                    <div class="col">
                        <div class="form-outline">
                            <input
                                type="number"
                                id="delid"
                                name="delid"
                                class="form-control"
                                style="
                                    background-image: url('data:image/png;base64,');
                                    background-repeat: no-repeat;
                                    background-attachment: scroll;
                                    background-size: 16px 18px;
                                    background-position: 98% 50%;
                                "
                                autocomplete="off"
                            />
                            <label class="form-label" for="delid">Spaceship ID</label>
                            <div class="form-notch">
                                <div class="form-notch-leading"></div>
                                <div class="form-notch-middle"></div>
                                <div class="form-notch-trailing"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-danger btn-block mb-4">Delete Spaceship</button>
            </form>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
</body>
</html>